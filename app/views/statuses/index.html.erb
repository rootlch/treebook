<div class="page-header">
  <h1>All Status</h1>
  <%= link_to 'New Status', new_status_path, class:"btn btn-primary new-status" %>
</div>


<ol class="status-container">
  <% @statuses.each do |status| %>
    <li>
    <h2><%= status.name %></h2>
    <p><%= status.content %></p>
    <div class="links">
      <%= link_to time_ago_in_words(status.created_at), status %>
      <span class="admin">
        <%= link_to "Edit", edit_status_path(status) %>
        <%= link_to "Delete", status, method: :delete, data: {confirm: "Are you sure you want o delte this status?"} %>
      </span>
    </div>
    </li>
  <% end %>
</ol>
